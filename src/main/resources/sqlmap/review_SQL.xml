<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">

	<insert id="insert_review" parameterType="com.bbang.review.Review"
		useGeneratedKeys="true" keyProperty="rid">
		<![CDATA[
			INSERT INTO review 
				( rcontent, rscore )
			values 
				(#{rcontent}, #{rscore} ) 
		]]>
	</insert>

	<update id="update_review" parameterType="hashMap">
		<![CDATA[ 
			 UPDATE review 
        	 SET rcontent = #{rcontent}, 
        		 rscore = #{rscore}
       		 WHERE rid = #{rid} 
		]]>

	</update>

	<select id="select_list_for_store"  parameterType="String"
				resultType="com.bbang.review.Review"> 
		<![CDATA[ 
			SELECT * 
			FROM review 
			WHERE sid = #{sid}
			ORDER BY sid 
		 ]]>
	</select>

	<select id="select_my_review" parameterType="String"
		resultType="com.bbang.review.Review"> 
		<![CDATA[ 
			SELECT * 
			FROM store 
			WHERE rid = #{rid}
		 ]]>
	</select>

	<delete id="delete_review" parameterType="String">
		<![CDATA[ 
			DELETE 
			FROM review 
			WHERE rid = #{rid} 
		 ]]>
	</delete>


</mapper>